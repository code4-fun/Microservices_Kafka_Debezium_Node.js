generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum OrderStatus {
  created
  cancelled
  awaiting_payment
  complete
}

model Ticket {
  id        String   @id @default(cuid())
  title     String
  price     Int
  version   Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  orders Order[]
}

model Order {
  id        String      @id @default(cuid())
  userId    String
  status    OrderStatus @default(created)
  expiresAt DateTime
  ticketId  String
  version   Int
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt

  ticket Ticket @relation(fields: [ticketId], references: [id])

  // removed
  // @@unique([ticketId, status], name: "unique_active_order_per_ticket")
  // added partial index instead (20251225131526_change_orders_add_index)
}

model Outbox {
  id            String   @id @default(cuid())
  eventId       String
  aggregatetype String
  aggregateid   String
  type          String
  payload       Json
  createdAt     DateTime @default(now())

  @@index([aggregatetype, aggregateid])
}

model ProcessedEvent {
  eventId   String   @id
  topic     String
  createdAt DateTime @default(now())
}
